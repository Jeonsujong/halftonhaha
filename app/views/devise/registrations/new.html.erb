<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 style="color: white">회원 가입</h2>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs" style="color: white">
            <%= f.input :image1, required: true %>
            <%= f.input :image2, required: true %>
            <%= f.input :image3, required: true %>
            <%= f.input :image4, required: true %>
            <%= f.input :image5, required: true %>
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :nickname, required: true, placeholder: "" %>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "확인" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
